<mjml>
  <mj-head>
      <mj-title>{% trans %}emails.sign_up.title{% endtrans %}</mj-title>
    <mj-include path="../../components/head.mjml" />
  </mj-head>
  <mj-body css-class="body">
    <mj-raw>
      {% set verify_url = resolve_front_url("VERIFY_SIGNUP",
      verification_token=verification_token) -%}
    </mj-raw>
    <mj-wrapper css-class="body-content">
      <mj-include path="../../components/header-logo.mjml" />
      <mj-section mj-class="padding-section">
        <mj-column>
          <mj-text css-class="dm-text"
            mj-class="font-heading1 color-gray100">
            {% trans %}emails.sign_up.verify{% endtrans %}
          </mj-text>
          <mj-text css-class="dm-text"
            mj-class="font-heading2 color-gray90">
            {% trans %}emails.sign_up.click_button{% endtrans %}
          </mj-text>
          <mj-button css-class="btn-primary"
            mj-class="btn-primary"
            href="{{ verify_url }}">
            {% trans %}emails.sign_up.verify{% endtrans %}
          </mj-button>
          <mj-text css-class="dm-text"
            mj-class="font-body color-gray70">
            {% trans %}emails.sign_up.button_not_working{% endtrans %}
          </mj-text>
          <mj-text css-class="dm-text-gray primary-link"
            mj-class="font-body padding-bottom-24">
            <a class="primary-link"
              href="{{ verify_url }}">{{ verify_url | wbr_split }}</a>
          </mj-text>
          <mj-text css-class="dm-text"
            mj-class="font-body">
            {% trans %}emails.sign_up.welcome{% endtrans %}
          </mj-text>
          <mj-text css-class="dm-text"
            mj-class="font-body padding-bottom-24">
            {% trans %}emails.commons.team{% endtrans %}
          </mj-text>
        </mj-column>
      </mj-section>
      <mj-include path="../../components/footer-expiration.mjml" />
    </mj-wrapper>
  </mj-body>
</mjml>
